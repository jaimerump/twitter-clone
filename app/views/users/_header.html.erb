<header class="bg-primary container text-white text-center col-lg-12 col-md-12">
  <h1><%= @user.name %></h1>
  <span><%= @user.screen_name %> - Joined <%= @user.created_at.strftime('%b %-d, %Y') %></span>

  <% if user_signed_in? %>
    <div class="row">
      <div class="col-lg col-md text-center">
        <% if current_user.following?(@user) %>
          <%= button_to "Unfollow", unfollow_path(@user), method: :delete, class: "btn btn-danger" %>
        <% else %>
          <%= button_to "Follow", follow_path(@user), method: :post, class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  <% end %>
</header>